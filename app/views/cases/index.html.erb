<p id="notice"><%= notice %></p>

<h1>Cases</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Total tests</th>
      <th>Pending results</th>
      <th>Positive cases</th>
      <th>Negative results</th>
      <th>Recovered</th>
      <th>Active cases</th>
      <th>Active hospitalizations</th>
      <th>Discharged today</th>
      <th>Resident deaths</th>
      <th>Non-resident deaths</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cases.each do |case_date| %>
      <tr>
        <td><%= case_date.date %></td>
        <td><%= case_date.total_tests %></td>
        <td><%= case_date.pending_results %></td>
        <td><%= case_date.positive_cases %></td>
        <td><%= case_date.negative_results %></td>
        <td><%= case_date.recovered %></td>
        <td><%= case_date.active_cases %></td>
        <td><%= case_date.active_hospitalizations %></td>
        <td><%= case_date.discharged_today %></td>
        <td><%= case_date.resident_deaths %></td>
        <td><%= case_date.nonresident_deaths %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

